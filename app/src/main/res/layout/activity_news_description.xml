<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewsDescriptionActivity">
    <TextView
        android:id="@+id/newsTitleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fístula obstétrica afecta mais de quatro mil mulheres por ano no país"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="@color/white"/>

    <ImageView
        android:id="@+id/newsImageView"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/cirurgianews" />


    <TextView
        android:id="@+id/newsInfoTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Pelo menos quatro mil mulheres contraem a fístula obstétricaespecialist..."
        android:textColor="@color/black"
        android:padding="10dp"/>
</LinearLayout>